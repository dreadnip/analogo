{
    "name": "dreadnip/chop",
    "description": "Clear opcache through php-fpm",
    "require": {
        "php": "^8.0",
        "hollodotme/fast-cgi-client": "^3.1"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.2",
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^10"
    },
    "autoload": {
        "psr-4": {
            "Chop\\": "src/"
        }
    },
    "autoload-dev":{
        "psr-4" : {
            "Chop\\Test\\": "tests/"
        }
    },
    "bin": ["bin/chop"]
}
